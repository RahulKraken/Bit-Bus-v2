<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.NextStaffBusFragment">

    <LinearLayout
        android:id="@+id/nextStaffBusLinearLayout"
        android:orientation="vertical"
        android:background="@drawable/next_staff_bus_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="bottom|end"
        android:paddingEnd="30dp"
        android:paddingBottom="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nextStaffBusLabel"
            android:text="@string/next_staff_bus_label"
            android:textSize="32sp"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:textStyle="bold"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textAlignment="viewEnd"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/nextStaffBusTime"
            android:text="@string/next_staff_bus_placeholder_time"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:paddingStart="25dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="200dp"
            android:textAlignment="viewEnd"
            android:maxLines="2"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>